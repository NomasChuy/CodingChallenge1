<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.QuotesListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quoteListRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupAPIChange" />


    <RadioGroup
        android:id="@+id/radioGroupAPIChange"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/authorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/author_button"
                android:buttonTint="@color/purple_500"
                android:checked="true"
                 />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/animeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/purple_500"
                android:text="@string/anime_button"
                app:layout_constraintBottom_toBottomOf="parent"
                 />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/movieButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_button"
                android:buttonTint="@color/purple_500"
              />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>